	<container qualifier="wildfly-embedded-mysql">
		<configuration>
			<property name="jbossHome">target/wildfly-${wildfly.version}</property>
			<property name="modulePath">target/wildfly-${wildfly.version}/modules</property>
		</configuration>
	</container>
